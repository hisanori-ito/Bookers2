<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image("50x50") %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "User_edit", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, url: books_path, method: :post, local: true do |f| %>
        <h4>Title</h4>
      <%= f.text_field :title %>
        <h4>Opinion</h4>
      <%= f.text_area :body %><br>
      <%= f.submit 'Create Book' %>
      <% end %>
    </div>
  </div>
</div>