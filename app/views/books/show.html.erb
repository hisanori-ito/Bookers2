<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/common', {user: @user_common, book: @book_common} %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <td>
       <!--ユーザー画像--><br>
       <%= link_to @book.user.name, user_path(@book.user.id) %>
      </td>
      <td>
       <%= link_to @book.title, book_path(@book.id) %>
      </td>
      <td>
       <%= @book.body %>
      </td>
      <% if @book.user == current_user %>
      <td>
       <%= link_to "Edit",edit_book_path(@book) %>
      </td>
      <td>
       <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => '本当に消しますか？' %>
      </td>
      <% end %>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>